<div class="mt-4">
    <h3>Thêm cơ sở nuôi trồng</h3>

    <form method="POST" action="/cosonuoitrong/store">
        <div class="form-group">
            <label>Tài khoản:</label>
            <select class="form-select" name="tkId" aria-label="Default select example">
                <option disabled selected>Open this select menu</option>
                <option value="1">One</option>
            </select>
        </div>
        <div class="form-group">
            <label for="ten">Tên cơ sở nuôi trồng:</label>
            <input type="text" class="form-control mt-1" id="ten" name="ten">
        </div>
        <div class="form-group">
            <label for="chusohuu">Chủ sở hữu:</label>
            <input type="text" class="form-control mt-1" id="chusohuu" name="chusohuu">
        </div>
        <div class="form-group">
            <label for="diachi">Địa chỉ:</label>
            <input type="text" class="form-control mt-1" id="diachi" name="diachi">
        </div>
        <div class="form-group">
            <label for="sdt">Số điện thoại:</label>
            <input type="text" class="form-control mt-1" id="sdt" name="sdt">
        </div>
        <div class="form-group">
            <label for="dientich">Diện tích:</label>
            <input type="text" class="form-control mt-1" id="dientich" name="dientich">
        </div>
        <div class="form-group">
            <label for="dtmatnuoc">Diện tích mặt nước:</label>
            <input type="text" class="form-control mt-1" id="dtmatnuoc" name="dtmatnuoc">
        </div>
        <div class="form-group">
            <label for="namdangky">Năm đăng ký:</label>
            <input type="text" class="form-control mt-1" id="namdangky" name="namdangky">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Thêm cơ sở nuôi trồng</button>
    </form>
</div>